{% extends "layout.njk" %}

{% block content %}

<div class="table-container">
    <div class="header">
        <form action="/instructor" method="GET">
            <input 
            type="text"
            name="filter"
            placeholder="Nome ou Atendimento"
            value="{{filter}}"
            >
            <button type="submit">
                Filtrar
            </button>
        </form>
        <a class="button" href="instructor/create">+ Novo instrutor</a>
    </div>
    <table width="100%">
        <thead>
            <tr>
                <th>Instructor</th>
                <th>Atendimento</th>
                <th>Alunos</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {% for instructor in instructors  %}
            <tr>

                <td>
                    <span style="background-image: url({{instructor.avatar_url}})"></span>
                    {{instructor.name}}
                </td>
                <td>{{instructor.services}}</td>
                <td>{{instructor.total_students}}</td>
                <td>
                    <a href="/instructor/{{instructor.id}}">Ver</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="pagination"
        data-page={{pagination.page}}
        data-total={{pagination.total}}
        data-filter={{filter}}
    >
    
    </div>

</div>

{% endblock content %}