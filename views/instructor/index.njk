{% extends "layout.njk" %}

{% block content %}

<div class="table-container">
    <a href="instructor/create">+ Novo instrutor</a>
    <table width="100%">
        <thead>
            <tr>
                <th>Instructor</th>
                <th>Services</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {% for instructor in instructors  %}
            <tr>

                <td>
                    <span style="background-image: url({{instructor.avatar_url}})"></span>
                    {{instructor.name}}
                </td>
                <td>{{instructor.services}}</td>
                <td>
                    <a href="/instructor/{{instructor.id}}">Ver</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock content %}