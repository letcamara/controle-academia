{% extends "layout.njk" %}

{% block content %}
    <section>
        <div class="cards">
            <div class="card__content">
                {% for item in items %}
                <div class="card" id="{{item.id}}">
                    <div class="card__image-container">
                        <img src="/{{item.id}}.png" alt="{{item.title}}" />
                    </div>
                    <div class="card__title">
                        <p>{{item.title}}</p>
                    </div>
                    <div class="card__author">
                        <p>{{item.author}}</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}